{{ 'nova-hero.css' | asset_url | stylesheet_tag }}

<section class="nova-hero" style="--hero-bg: {{ section.settings.background_color }}; --hero-text: {{ section.settings.text_color }};">
  <div class="nova-hero__container">
    {% if section.settings.announcement_text != blank %}
      <div class="nova-hero__announcement">
        {{ section.settings.announcement_text }}
      </div>
    {% endif %}

    <div class="nova-hero__content">
      {% if section.settings.badge_text != blank %}
        <span class="nova-hero__badge">{{ section.settings.badge_text }}</span>
      {% endif %}

      <h1 class="nova-hero__headline">
        {{ section.settings.headline | default: 'Premium Quality, Unbeatable Value' }}
      </h1>

      <p class="nova-hero__subheadline">
        {{ section.settings.subheadline | default: 'Discover the difference that quality makes.' }}
      </p>

      {% if section.settings.show_features %}
        <div class="nova-hero__features">
          {% for block in section.blocks %}
            {% if block.type == 'feature' %}
              <div class="nova-hero__feature">
                {% if block.settings.icon != blank %}
                  <span class="nova-hero__feature-icon">{{ block.settings.icon }}</span>
                {% endif %}
                <span class="nova-hero__feature-text">{{ block.settings.text }}</span>
              </div>
            {% endif %}
          {% endfor %}
        </div>
      {% endif %}

      <div class="nova-hero__cta">
        <a href="{{ section.settings.button_link | default: '/collections/all' }}" class="nova-hero__button nova-hero__button--primary">
          {{ section.settings.button_text | default: 'Shop Now' }}
        </a>
        {% if section.settings.secondary_button_text != blank %}
          <a href="{{ section.settings.secondary_button_link }}" class="nova-hero__button nova-hero__button--secondary">
            {{ section.settings.secondary_button_text }}
          </a>
        {% endif %}
      </div>

      {% if section.settings.show_trust_badges %}
        <div class="nova-hero__trust">
          <span class="nova-hero__trust-item">‚úì Free Shipping</span>
          <span class="nova-hero__trust-item">‚úì 30-Day Returns</span>
          <span class="nova-hero__trust-item">‚úì Secure Checkout</span>
        </div>
      {% endif %}
    </div>

    {% if section.settings.image != blank %}
      <div class="nova-hero__media">
        {{ section.settings.image | image_url: width: 800 | image_tag: class: 'nova-hero__image', loading: 'eager' }}
      </div>
    {% endif %}
  </div>

  {% if section.settings.show_stats %}
    <div class="nova-hero__stats">
      <div class="nova-hero__stat">
        <span class="nova-hero__stat-number">{{ section.settings.stat_1_number | default: '50K+' }}</span>
        <span class="nova-hero__stat-label">{{ section.settings.stat_1_label | default: 'Happy Customers' }}</span>
      </div>
      <div class="nova-hero__stat">
        <span class="nova-hero__stat-number">{{ section.settings.stat_2_number | default: '4.9' }}</span>
        <span class="nova-hero__stat-label">{{ section.settings.stat_2_label | default: 'Star Rating' }}</span>
      </div>
      <div class="nova-hero__stat">
        <span class="nova-hero__stat-number">{{ section.settings.stat_3_number | default: '30' }}</span>
        <span class="nova-hero__stat-label">{{ section.settings.stat_3_label | default: 'Day Guarantee' }}</span>
      </div>
    </div>
  {% endif %}
</section>

