{{ 'nova-features.css' | asset_url | stylesheet_tag }}

<section class="nova-features" style="--features-bg: {{ section.settings.background_color }};">
  <div class="nova-features__container">
    <div class="nova-features__header">
      {% if section.settings.badge_text != blank %}
        <span class="nova-features__badge">{{ section.settings.badge_text }}</span>
      {% endif %}
      <h2 class="nova-features__title">{{ section.settings.title | default: 'Why Choose Us' }}</h2>
      <p class="nova-features__subtitle">{{ section.settings.subtitle }}</p>
    </div>

    <div class="nova-features__grid">
      {% for block in section.blocks %}
        {% if block.type == 'feature' %}
          <div class="nova-feature" {{ block.shopify_attributes }}>
            <div class="nova-feature__icon">
              {{ block.settings.icon | default: '‚ú®' }}
            </div>
            <h3 class="nova-feature__title">{{ block.settings.title }}</h3>
            <p class="nova-feature__description">{{ block.settings.description }}</p>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</section>

